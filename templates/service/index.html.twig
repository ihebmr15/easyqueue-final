{% extends 'base.html.twig' %}

{% block title %}Services - EasyQueue{% endblock %}

{% block stylesheets %}
<style>
    .search-filter-section {
        background: #f8f9fa;
        padding: 20px;
        border-radius: 8px;
        margin-bottom: 30px;
    }
    .search-filter-section form {
        display: flex;
        gap: 15px;
        flex-wrap: wrap;
        align-items: end;
    }
    .search-filter-section .form-group {
        flex: 1;
        min-width: 200px;
        margin-bottom: 0;
    }
    .services-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 20px;
        margin-top: 20px;
    }
    .service-card {
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 20px;
        background: white;
        transition: transform 0.2s, box-shadow 0.2s;
        display: flex;
        flex-direction: column;
    }
    .service-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 16px rgba(0,0,0,0.15);
    }
    .service-image {
        width: 100%;
        height: 200px;
        object-fit: cover;
        border-radius: 5px;
        margin-bottom: 15px;
    }
    .service-category {
        display: inline-block;
        background: #667eea;
        color: white;
        padding: 5px 10px;
        border-radius: 15px;
        font-size: 0.85em;
        margin-bottom: 10px;
    }
    .service-card h2 {
        margin: 10px 0;
        color: #2c3e50;
    }
    .service-card p {
        color: #666;
        margin: 5px 0;
        flex-grow: 1;
    }
    .service-card .btn {
        margin-top: 15px;
        text-align: center;
    }
    .search-filter-section h3 {
        margin-bottom: 15px;
    }
    .category-badge {
        display: inline-block;
        background: #667eea;
        color: white;
        padding: 8px 15px;
        border-radius: 20px;
        font-size: 0.9em;
        margin: 5px 5px 5px 0;
        cursor: pointer;
        transition: all 0.3s;
    }
    .category-badge:hover {
        background: #5568d3;
        transform: scale(1.05);
    }
    .category-badge.active {
        background: #27ae60;
    }
    @media (max-width: 768px) {
        .services-grid {
            grid-template-columns: 1fr;
        }
        .search-filter-section form {
            flex-direction: column;
        }
        .search-filter-section .form-group {
            width: 100%;
        }
    }
</style>
{% endblock %}

{% block body %}
<h1>Available Services</h1>

{# Quick Category Filters - Simple and Smooth for Users #}
{% if categories|length > 0 %}
    <div style="margin-bottom: 25px; padding: 15px; background: #f8f9fa; border-radius: 8px;">
        <h3 style="margin-top: 0; margin-bottom: 15px; color: #2c3e50; font-size: 1.1em;">üìÅ Browse by Category:</h3>
        <div style="display: flex; flex-wrap: wrap; gap: 10px;">
            <a href="{{ path('services') }}" class="category-badge {% if not selectedCategory %}active{% endif %}" style="text-decoration: none;">
                üìÅ All ({{ services|length }})
            </a>
            {% for category in categories %}
                <a href="{{ path('services', {'category': category.id}) }}" 
                   class="category-badge {% if selectedCategory == category.id %}active{% endif %}" 
                   style="text-decoration: none;">
                    üìÅ {{ category.name|e }} {% if categoryCounts[category.id] is defined and categoryCounts[category.id] > 0 %}({{ categoryCounts[category.id] }}){% endif %}
                </a>
            {% endfor %}
        </div>
    </div>
{% endif %}

<div class="search-filter-section">
    <h3 style="margin-top: 0; color: #2c3e50;">üîç Search & Filter Services</h3>
    <form method="get" action="{{ path('services') }}" id="filterForm">
        <div class="form-group">
            <label for="search">Search Services:</label>
            <input type="text" id="search" name="search" value="{{ search|e }}" placeholder="Search by name or description..." autocomplete="off">
        </div>
        <div class="form-group">
            <label for="category">Filter by Category:</label>
            <select name="category" id="category">
                <option value="">üìÅ All Categories</option>
                {% for category in categories %}
                    <option value="{{ category.id }}" {% if selectedCategory == category.id %}selected{% endif %}>
                        üìÅ {{ category.name|e }} {% if categoryCounts[category.id] is defined and categoryCounts[category.id] > 0 %}({{ categoryCounts[category.id] }}){% endif %}
                    </option>
                {% endfor %}
            </select>
        </div>
        <div class="form-group" style="display: flex; gap: 10px; align-items: center;">
            <button type="submit" class="btn" style="flex: 1;">üîç Search</button>
            <a href="{{ path('services') }}" class="btn" style="background: #95a5a6; flex: 1; text-align: center;">üîÑ Reset</a>
        </div>
    </form>
    {% if search or selectedCategory %}
        <div style="margin-top: 15px; padding: 10px; background: #e8f4f8; border-radius: 5px; font-size: 0.9em;">
            <strong>Active Filters:</strong>
            {% if search %}
                <span style="background: #667eea; color: white; padding: 3px 8px; border-radius: 3px; margin-left: 5px;">
                    Search: "{{ search|e }}"
                </span>
            {% endif %}
            {% if selectedCategory %}
                {% for category in categories %}
                    {% if category.id == selectedCategory %}
                        <span style="background: #27ae60; color: white; padding: 3px 8px; border-radius: 3px; margin-left: 5px;">
                            Category: {{ category.name|e }}
                        </span>
                    {% endif %}
                {% endfor %}
            {% endif %}
        </div>
    {% endif %}
</div>

{% if services is empty %}
    <div style="text-align: center; padding: 40px;">
        <p style="font-size: 1.2em; color: #666;">No services found matching your criteria.</p>
    </div>
{% else %}
    {# Display services grouped by category #}
    {% if servicesByCategory is defined and servicesByCategory is not empty %}
        {% for catData in servicesByCategory %}
            <div style="margin-bottom: 40px;">
                <h2 style="color: #667eea; border-bottom: 2px solid #667eea; padding-bottom: 10px; margin-bottom: 20px;">
                    üìÅ {{ catData.category.name|e }}
                    {% if catData.category.description %}
                        <small style="color: #666; font-weight: normal; font-size: 0.7em; display: block; margin-top: 5px;">
                            {{ catData.category.description|e }}
                        </small>
                    {% endif %}
                </h2>
                <div class="services-grid">
                    {% for service in catData.services %}
                        <div class="service-card">
                            {% if service.image %}
                                <img src="{{ asset(service.image) }}" alt="{{ service.name|e }}" class="service-image">
                            {% else %}
                                <div class="service-image" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); display: flex; align-items: center; justify-content: center; color: white; font-size: 3em;">
                                    üìã
                                </div>
                            {% endif %}
                            {% if service.category %}
                                <span class="service-category">{{ service.category.name|e }}</span>
                            {% endif %}
                            <h2>{{ service.name|e }}</h2>
                            {% if service.description %}
                                <p>{{ service.description|raw }}</p>
                            {% endif %}
                            <p><strong>Average Wait Time:</strong> {{ service.averageWaitTime }} minutes</p>
                            <a href="{{ path('ticket_book', {'serviceId': service.id}) }}" class="btn">Book Ticket</a>
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% endfor %}
    {% endif %}
    
    {# Display uncategorized services if any #}
    {% if uncategorizedServices is defined and uncategorizedServices|length > 0 %}
        <div style="margin-bottom: 40px;">
            <h2 style="color: #95a5a6; border-bottom: 2px solid #95a5a6; padding-bottom: 10px; margin-bottom: 20px;">
                üìÅ Other Services
            </h2>
            <div class="services-grid">
                {% for service in uncategorizedServices %}
                    <div class="service-card">
                        {% if service.image %}
                            <img src="{{ asset(service.image) }}" alt="{{ service.name|e }}" class="service-image">
{% else %}
                            <div class="service-image" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); display: flex; align-items: center; justify-content: center; color: white; font-size: 3em;">
                                üìã
                            </div>
                        {% endif %}
                        <h2>{{ service.name|e }}</h2>
                        {% if service.description %}
                            <p>{{ service.description|raw }}</p>
                        {% endif %}
                        <p><strong>Average Wait Time:</strong> {{ service.averageWaitTime }} minutes</p>
                        <a href="{{ path('ticket_book', {'serviceId': service.id}) }}" class="btn">Book Ticket</a>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endif %}
    
    {# Fallback: Display all services if grouping didn't work #}
    {% if (servicesByCategory is not defined or servicesByCategory is empty) and (uncategorizedServices is not defined or uncategorizedServices is empty) %}
        <div class="services-grid">
    {% for service in services %}
        <div class="service-card">
                    {% if service.image %}
                        <img src="{{ asset(service.image) }}" alt="{{ service.name|e }}" class="service-image">
                    {% else %}
                        <div class="service-image" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); display: flex; align-items: center; justify-content: center; color: white; font-size: 3em;">
                            üìã
                        </div>
                    {% endif %}
                    {% if service.category %}
                        <span class="service-category">{{ service.category.name|e }}</span>
                    {% endif %}
                    <h2>{{ service.name|e }}</h2>
            {% if service.description %}
                        <p>{{ service.description|raw }}</p>
            {% endif %}
            <p><strong>Average Wait Time:</strong> {{ service.averageWaitTime }} minutes</p>
            <a href="{{ path('ticket_book', {'serviceId': service.id}) }}" class="btn">Book Ticket</a>
        </div>
    {% endfor %}
        </div>
    {% endif %}
{% endif %}
{% endblock %}

