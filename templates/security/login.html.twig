{% extends 'base.html.twig' %}

{% block title %}Login - EasyQueue{% endblock %}

{% block body %}
<h1>Login</h1>

{% if error %}
    <div class="flash-message flash-error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form method="post" style="max-width: 400px;">
    <div class="form-group">
        <label for="inputEmail">Email</label>
        <input type="email" value="{{ last_username }}" name="_username" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
    </div>
    <div class="form-group">
        <label for="inputPassword">Password</label>
        <input type="password" name="_password" id="inputPassword" class="form-control" autocomplete="current-password" required>
    </div>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

    <button class="btn" type="submit">Sign in</button>
</form>

<p style="margin-top: 20px;">Don't have an account? <a href="{{ path('register') }}">Register here</a></p>
{% endblock %}

