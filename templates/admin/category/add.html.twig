{% extends 'base.html.twig' %}

{% block title %}Add Category - Admin{% endblock %}

{% block body %}
<h1>Add New Category</h1>

<div style="max-width: 600px;">
    <form method="post" action="{{ path('admin_category_add') }}">
        <input type="hidden" name="_token" value="{{ csrf_token('category_add') }}">
        
        <div class="form-group">
            <label for="name">Category Name *</label>
            <input type="text" id="name" name="name" required maxlength="255" placeholder="Enter category name">
        </div>

        <div class="form-group">
            <label for="description">Description</label>
            <textarea id="description" name="description" rows="4" placeholder="Enter category description (optional)"></textarea>
        </div>

        <div style="display: flex; gap: 10px; margin-top: 20px;">
            <button type="submit" class="btn btn-success">Add Category</button>
            <a href="{{ path('admin_category_list') }}" class="btn" style="background: #95a5a6;">Cancel</a>
        </div>
    </form>
</div>
{% endblock %}




